<UserControl
    x:Class="netflix.Setting.Views.SettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:netflix.Setting.Views"
    xmlns:support="clr-namespace:netflix.Support.Themes.UI;assembly=netflix.Support">

    <Grid Background="{StaticResource MainBackgroundBrush}">
        <support:IconButton
            Margin="15,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding GoHomeCommand}"
            Fill="{StaticResource MainIconBrush}"
            Icon="{StaticResource LeftArrow}"
            IconSize="32" />

        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <support:PlaceHolderTextBox PlaceholderText="사용자 이름" Text="{Binding CurrentProfile.Name,Mode=TwoWay}" />
        </StackPanel>

    </Grid>
</UserControl>