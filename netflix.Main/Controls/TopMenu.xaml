<UserControl
    x:Class="netflix.Main.Controls.TopMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:support="clr-namespace:netflix.Support.Themes.UI;assembly=netflix.Support"
    Height="68"
    Background="{StaticResource MainBackgroundBrush}">

    <UserControl.Resources>
        <Style x:Key="menuButton" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="GroupName" Value="menuGroup" />
            <Setter Property="Margin" Value="20,0,0,0" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter
                                x:Name="content"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="content"
                                                Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                To="#8E8E8E"
                                                Duration="0:0:0.3" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Normal">
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="content"
                                                Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                To="White"
                                                Duration="0:0:0.3" />
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="CheckStates">
                                    <VisualState x:Name="Checked">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="content" Storyboard.TargetProperty="(TextBlock.FontWeight)">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static FontWeights.Bold}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unchecked">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="content" Storyboard.TargetProperty="(TextBlock.FontWeight)">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static FontWeights.Normal}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border>
        <Border.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Offset="0.2" Color="#AA000000" />
                <GradientStop Offset="1" Color="Transparent" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid Margin="50,0,50,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  왼쪽 메뉴  -->
            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
                <Button
                    Background="Transparent"
                    Content="NETFLIX"
                    FontSize="18"
                    Foreground="{StaticResource LogoForeGroundBrush}" />

                <RadioButton
                    Command="{Binding GoHomeCommand}"
                    Content="홈"
                    Style="{StaticResource menuButton}" />
                <RadioButton Content="시리즈" Style="{StaticResource menuButton}" />
                <RadioButton Content="영화" Style="{StaticResource menuButton}" />
                <RadioButton Content="NEW! 요즘 대세 콘텐츠" Style="{StaticResource menuButton}" />
                <RadioButton
                    Command="{Binding GoBookMarkedCommand}"
                    Content="내가 찜한 리스트"
                    Style="{StaticResource menuButton}" />
                <RadioButton Content="언어 별로 찾아보기" Style="{StaticResource menuButton}" />
            </StackPanel>

            <!--  오른쪽 프로필  -->
            <StackPanel
                Grid.Column="1"
                Margin="0,0,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top">
                <support:Profile
                    Width="50"
                    Click="Profile_Click"
                    DataContext="{Binding CurrentProfile}" />

                <Popup x:Name="ProfilePopup" Placement="Bottom">
                    <Border
                        Background="{StaticResource MainBackgroundBrush}"
                        BorderBrush="{StaticResource MainBackgroundBrush}"
                        BorderThickness="1">
                        <StackPanel Orientation="Vertical">
                            <Button Command="{Binding ProfileSettingCommand}" Content="프로필 설정" />
                            <Button Command="{Binding SelectProFileCommand}" Content="프로필 선택" />
                            <Button Command="{Binding LogoutCommand}" Content="로그아웃" />
                        </StackPanel>
                    </Border>
                </Popup>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
