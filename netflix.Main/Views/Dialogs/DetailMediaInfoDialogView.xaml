<UserControl
    x:Class="netflix.Main.Views.Dialogs.DetailMediaInfoDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:support="clr-namespace:netflix.Support.Themes.UI;assembly=netflix.Support"
    Width="900"
    Height="900">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
        </Style>
    </UserControl.Resources>
    <ScrollViewer>
        <Grid x:Name="LayoutRoot" Background="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="400" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Image Source="{Binding MediaInfo.PosterUrl}" Stretch="UniformToFill" />
            <support:GradientHoverButton
                Width="50"
                Height="50"
                Margin="20"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="{StaticResource MainBackgroundBrush}"
                Command="{Binding CloseCommand}"
                Content="X"
                CornerRadius="100"
                Cursor="Hand"
                FontSize="24"
                Foreground="White"
                HoverBackground="{StaticResource MainHoverBackground}" />


            <Grid Margin="50,0,50,0">
                <StackPanel
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
                    <support:IconButton
                        Width="120"
                        Height="50"
                        Margin="0,0,0,50"
                        Background="White"
                        Content="재생"
                        Fill="Black"
                        FontSize="24"
                        Foreground="Black"
                        Icon="{StaticResource PlayIcon}"
                        IconSize="24" />
                    <support:IconButton
                        Margin="10,0,0,0"
                        VerticalAlignment="Top"
                        Background="#232323"
                        BorderBrush="#919191"
                        BorderThickness="2"
                        CornerRadius="100"
                        Fill="White"
                        FontSize="24"
                        Foreground="Black"
                        Icon="{StaticResource PlusIcon}"
                        IconSize="24"
                        UseText="False" />
                    <support:IconButton
                        Margin="10,0,0,0"
                        VerticalAlignment="Top"
                        Background="#232323"
                        BorderBrush="#919191"
                        BorderThickness="2"
                        CornerRadius="100"
                        DockPanel.Dock="Left"
                        Fill="White"
                        FontSize="24"
                        Foreground="Black"
                        Icon="{StaticResource ThumbUpIcon}"
                        IconSize="24"
                        UseText="False" />
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="1" Margin="50,30,50,0">
                <Grid x:Name="DetailInfo">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="4*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="2025(출시년도) 에피소드 9개" />
                        <TextBlock
                            Margin="0,10,0,0"
                            Text="율제병원 산부인과 1년 차 레지던트들. 병원 생활과 인생살이가 가쁘게 몰아쳐도 어엿한 의사가 되기 위해 한 걸음씩 나아간다."
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>

                <ItemsControl Margin="0,50,0,0" ItemsSource="{Binding MediaInfoList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="400" />
                                    <!--  이미지 크기 고정  -->
                                    <ColumnDefinition Width="30" />
                                    <!--  간격용 빈 칸  -->
                                    <ColumnDefinition Width="*" />
                                    <!--  남은 공간 TextBlock 사용  -->
                                </Grid.ColumnDefinitions>

                                <Image
                                    Grid.Column="0"
                                    Width="400"
                                    Height="250"
                                    Source="{Binding PosterUrl}" />
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock
                                        FontSize="20"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="1화" />
                                    <TextBlock
                                        FontSize="16"
                                        Foreground="White"
                                        Text="경제적으로 궁지에 몰려 마지못해 레지던트 생활로 돌아온 오이영. 시작부터 실수 연발이다. 그러던 중 환자 문제로 첫 고비를 맞이한다."
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

        </Grid>
    </ScrollViewer>

</UserControl>