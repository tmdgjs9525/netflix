<UserControl
    x:Class="netflix.Main.Views.TestView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:netflix.Main.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!-- 네비게이션 메뉴 (왼쪽) -->
        <StackPanel Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Background="#FF232323" Width="160">
            <TextBlock Text="네비게이션"
                       Foreground="White"
                       FontWeight="Bold"
                       FontSize="18"
                       Margin="16,16,16,8"/>
            <Button Content="홈" Margin="16,8,16,0" Height="40" />
            <Button Content="검색" Margin="16,8,16,0" Height="40" />
            <Button Content="내 리스트" Margin="16,8,16,0" Height="40" />
        </StackPanel>

        <!-- 상단(Row 0) -->
        <Border Grid.Row="0" Grid.Column="1" Background="#FFF7F7F7"  />

        <!-- 중앙(Row 1, 주 내용) -->
        <Border Grid.Row="1" Grid.Column="1" Background="White"  />

        <!-- 하단(Row 2) -->
        <Border Grid.Row="2" Grid.Column="1" Background="#FFF0F0F0"  />

    </Grid>
</UserControl>