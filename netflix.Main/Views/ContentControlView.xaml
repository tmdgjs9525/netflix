<UserControl
    x:Class="netflix.Main.Views.ContentControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attach="clr-namespace:netflix.Support.AttachProperties;assembly=netflix.Support"
    xmlns:local="clr-namespace:netflix.Main.Views"
    xmlns:vm="clr-namespace:netflix.Main.ViewModels">

    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
            <Button
                Height="200"
                Command="{Binding AddACommand}"
                Content="Add A" />
            <Button
                Height="200"
                Command="{Binding AddBCommand}"
                Content="Add B" />
        </StackPanel>

        <ItemsControl
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            ItemsSource="{Binding Items}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ContentControl
                        attach:ContentControlTemplateHelper.EnableAutoTemplate="True"
                        Background="Blue"
                        Content="{Binding .}">
                        <ContentControl.Resources>
                            <DataTemplate x:Key="a" DataType="{x:Type vm:ChildA}">
                                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                    <RadioButton GroupName="MyRadio" IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                                    <TextBlock
                                        FontSize="30"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="{Binding Name}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </DataTemplate>
                            <DataTemplate x:Key="b" DataType="{x:Type vm:ChildB}">
                                <Grid Margin="0">

                                    <TextBlock
                                        FontSize="20"
                                        Foreground="Red"
                                        Text="{Binding Name, Mode=TwoWay}" />
                                </Grid>
                            </DataTemplate>
                        </ContentControl.Resources>
                    </ContentControl>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
