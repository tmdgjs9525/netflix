<UserControl
    x:Class="netflix.Views.Dialogs.MediaInfoDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:netflix.Views.Dialogs"
    Width="600"
    Height="800">
    <ScrollViewer>
        <Grid Background="Black" x:Name="LayoutRoot">
            <Grid.RowDefinitions>
                <RowDefinition Height="400"/>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Image Stretch="Uniform" Source="https://assets.nflxext.com/ffe/siteui/vlv3/e3e9c31f-aa15-4a8f-8059-04f01e6b8629/web/KR-ko-20250113-TRIFECTA-perspective_c39cebdf-3acb-4845-bd67-10e6e11f5630_small.jpg"/>
            <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20" Width="50" Height="50" Content="X" Command="{Binding CloseCommand}"/>
        </Grid>
    </ScrollViewer>

</UserControl>