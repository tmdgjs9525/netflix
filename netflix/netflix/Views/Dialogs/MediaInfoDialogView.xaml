<UserControl
    x:Class="netflix.Views.Dialogs.MediaInfoDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:netflix.Views.Dialogs"
    xmlns:units="clr-namespace:netflix.Themes.Units"
    Width="900"
    Height="900">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White" />
        </Style>
    </UserControl.Resources>
    <ScrollViewer>
        <Grid x:Name="LayoutRoot" Background="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="400" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Image Source="{Binding MediaInfo.PosterUrl}" Stretch="UniformToFill" />
            <units:GradientHoverButton
                Width="50"
                Height="50"
                Margin="20"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="{StaticResource MainBackgroundBrush}"
                Command="{Binding CloseCommand}"
                Content="X"
                CornerRadius="100"
                Cursor="Hand"
                FontSize="24"
                Foreground="White"
                HoverBackground="{StaticResource MainHoverBackground}" />


            <Grid Margin="50,0,50,0">
                <StackPanel
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
                    <units:IconButton
                        Width="120"
                        Height="50"
                        Margin="0,0,0,50"
                        Background="White"
                        Content="재생"
                        Fill="Black"
                        FontSize="24"
                        Foreground="Black"
                        Icon="{StaticResource PlayIcon}"
                        IconSize="24" />
                    <units:IconButton
                        Margin="10,0,0,0"
                        VerticalAlignment="Top"
                        Background="#232323"
                        BorderBrush="#919191"
                        BorderThickness="2"
                        CornerRadius="100"
                        Fill="White"
                        FontSize="24"
                        Foreground="Black"
                        Icon="{StaticResource PlusIcon}"
                        IconSize="24"
                        UseText="False" />
                    <units:IconButton
                        Margin="10,0,0,0"
                        VerticalAlignment="Top"
                        Background="#232323"
                        BorderBrush="#919191"
                        BorderThickness="2"
                        CornerRadius="100"
                        DockPanel.Dock="Left"
                        Fill="White"
                        FontSize="24"
                        Foreground="Black"
                        Icon="{StaticResource ThumbUpIcon}"
                        IconSize="24"
                        UseText="False" />
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="1" Margin="50,30,50,0">
                <Grid x:Name="DetailInfo">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="4*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="2025(출시년도) 에피소드 9개" />
                        <TextBlock
                            Margin="0,10,0,0"
                            Text="용사들과 세상을 구한 엘프 프리렌이 마법을 수집하기 위해 혼자 여행을 떠난다. 이로부터 50년 후, 그녀는 많이 늙어버린 옛 동료들과 다시 만난다."
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>

                <ItemsControl Margin="0,50,0,0" ItemsSource="{Binding MediaInfoList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="400"
                                    Height="250"
                                    Source="{Binding PosterUrl}" />
                                <StackPanel Margin="30,0,0,0">
                                    <TextBlock
                                        FontSize="20"
                                        Foreground="White"
                                        Text="a" />
                                    <TextBlock
                                        FontSize="16"
                                        Foreground="White"
                                        Text="b" />
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

        </Grid>
    </ScrollViewer>

</UserControl>