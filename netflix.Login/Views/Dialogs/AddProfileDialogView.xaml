<UserControl
    x:Class="netflix.Login.Views.Dialogs.AddProfileDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:netflix.Login.Views.Dialogs"
    xmlns:support="clr-namespace:netflix.Support.Themes.UI;assembly=netflix.Support"
    Width="500"
    Height="860">

    <Grid Background="Black">
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">

            <Image
                Width="150"
                Height="150"
                Source="{Binding Profile.ImagePath}"
                Stretch="Uniform" />

            <support:PlaceHolderTextBox
                Margin="0,20,0,0"
                PlaceholderText="Nick Name" 
                Text="{Binding Profile.Name, Mode=TwoWay}" />

            <Button
                Margin="0,10,0,0"
                Command="{Binding SaveCommand}"
                Content="Save" />
        </StackPanel>

    </Grid>
</UserControl>
